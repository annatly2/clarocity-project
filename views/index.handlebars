<div class = "container">
  <div class="jumbotron">
    <h1>Clarocity</h1>
    <h2>Reinventing the Real Estate Valuation Market</h2>
  </div>

<h1>Time to Review Some Properties</h1>

 <div class="row text-center">
   <h2>Add a New Property to the List!</h2>
  <form method="POST" action="/properties" class = "form-inline">
    <div class = "form-group">
      Address: <input type="text" id="name" name="address" placeholder="Address" required>
      City: <input type="text" id="name" name="city" placeholder="City" required>
      State: <input type="text" id="name" name="state" placeholder="State" required>
      ZIP: <input type="text" id="name" name="zip" placeholder="ZIP" required>
      Sale Date (mm/dd/yy): <input type="text" id="name" name="sale_date" placeholder="Sale Date" required>
      Sale Price ($): <input type="text" id="name" name="sale_price" placeholder="Sale Price" required>
    </div>
    <button type="submit" class="addPropertyButton">Submit</button>
  </form>
 </div>

  <div id = "newProperty">
    <h2>Properties</h2>
    <h3>(Click on the property to remove it from the list)</h3>
        <table>
          <thead>
            <th>ID</th>
            <th>Address</th> 
            <th>City</th>
            <th>State</th>
            <th>ZIP</th> 
            <th>Sale Date</th>
            <th>Sale Price</th>
          </thead>
          </table>
          {{#each properties}}
          {{#unless this.deleted}}
        <table>
          <form action="/properties/{{this.id}}?_method=PUT" method="POST">
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.address}}</td>
              <td>{{this.city}}</td> 
              <td>{{this.state}}</td>
              <td>{{this.zip}}</td> 
              <td>{{this.sale_date}}</td>
              <td>{{this.sale_price}}</td> 
            </tr>
          </form>
        </table>
      {{/unless}}
    {{/each}}
  </div>
</div>
