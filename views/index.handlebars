<div class = "container">
  <div class="jumbotron container-fluid">
    <div class = "jtext">
      <h1>Clarocity</h1>
      <h2 class= "small-text">Reinventing the Real Estate Valuation Market</h2>
    </div>
  </div>

 <div class="row text-center">
   <h2 class = "instructions">Add a new property to the list, and it will appear in the table below. You can remove a property from the list using the "Remove" button.</h2>
  <form method="POST" action="/properties" class = "form-inline">
    <div class = "form-group">
      <input type="text" id="name" name="address" placeholder="Address" required>
      <input type="text" id="name" name="city" placeholder="City" required>
      <input type="text" id="name" name="state" placeholder="State" required>
      <input type="text" id="name" name="zip" placeholder="ZIP" required>
      <input type="text" id="name" name="sale_date" placeholder="Sale Date (mm/dd/yy)" required>
      <input type="text" id="name" name="sale_price" placeholder="Sale Price" required>
    </div>
    <button type="submit" class="addPropertyButton">Submit</button>
  </form>
 </div>

  <div class = "container">
    <div id = "newProperty">
        <h2>Properties to Review</h2>
            <table>
              <thead>
                <th>ID</th>
                <th>Address</th> 
                <th>City</th>
                <th>State</th>
                <th>ZIP</th> 
                <th>Sale Date</th>
                <th>Sale Price</th>
                <th></th>
              </thead>
              </table>
              {{#each properties}}
            <table>
              <form action="/properties/{{this.id}}?_method=PUT" method="POST">
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.address}}</td>
                  <td>{{this.city}}</td> 
                  <td>{{this.state}}</td>
                  <td>{{this.zip}}</td> 
                  <td>{{this.sale_date}}</td>
                  <td>{{this.sale_price}}</td> 
              </form>
                  <td>
                    <form method="POST" action="/properties/delete/{{id}}?_method=DELETE" class = "form-inline">
                        <button id="property-id{{id}}" type="submit">Remove</button>
                    </form>
                  </td>
                </tr>
            </table>
        {{/each}}
      </div>
  </div>
</div>